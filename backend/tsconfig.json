{
  "compilerOptions": {
    "target": "ES2020",
    "types": ["node"],
    "module": "CommonJS",
    "moduleResolution": "node",  // Измените с "bundler" на "node"
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src"]
}